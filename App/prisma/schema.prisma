generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uid      Int       @id @unique @default(autoincrement())
  name     String    @default("")
  gender   String    @default("M")
  email    String    @unique @default("")
  password String    @default("")
  groups   Group[]
  messages Message[]

  @@index([uid])
}

model Group {
  gid      Int       @id @unique @default(autoincrement())
  users    User[]
  messages Message[]

  @@index([gid])
}

model Message {
  group  Group  @relation(fields: [gid], references: [gid], onDelete: Cascade)
  sender User   @relation(fields: [uid], references: [uid], onDelete: Cascade)
  mid    Int    @id @unique @default(autoincrement())
  gid    Int
  uid    Int
  time   String @default("00:00")
  text   String @default("")

  @@index([mid])
  @@index([gid])
  @@index([uid])
}