generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uid      Int       @id @unique @default(autoincrement())
  name     String    @default("")
  email    String    @unique @default("")
  password String    @default("")
  groups   Group[]
  messages Message[]

  @@index([uid])
}

model Group {
  gid      Int       @id @unique @default(autoincrement())
  users    User[]
  messages Message[]

  @@index([gid])
}

model Message {
  gid    Group  @relation(fields: [group], references: [gid], onDelete: Cascade)
  uid    User   @relation(fields: [sender], references: [uid], onDelete: Cascade)
  mid    Int    @id @unique @default(autoincrement())
  group  Int
  sender Int
  time   String @default("00:00")
  text   String @default("")

  @@index([mid])
  @@index([group])
  @@index([sender])
}